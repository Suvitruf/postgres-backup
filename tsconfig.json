{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./"
  },
  "include": [
    "lib/**/*"
  ],

  "exclude": [
    "**/node_modules/*",
    "**/*.spec.ts"
  ]
}